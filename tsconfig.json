{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
    "jsx": "react",
    "sourceMap": true,
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
     "package-lock.json"
  ],
  "include": ["src/**/*.ts", "frontend/**/*.tsx"]
}
